@{
	ViewData["Title"] = "Home Page";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
@* Use * *@

@section Scripts {
    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                $("#p1").click(function () {
                    $("#p1").css("color", "red").slideUp(2000).slideDown(2000);
                });
            });
            // Selectors
            $('#highlightBtn').click(function () {
                $('p.text-primary').css('background-color', 'yellow');
            });

            // Events
            $('#showInputBtn').click(function () {
                var userInput = $('#textInput').val();
                if (userInput.trim() !== '') {
                    $('#inputDisplay').text('You typed: ' + userInput);
                } else {
                    $('#inputDisplay').text('Please type something!');
                }
            });

            $('#hoverBtn').hover(
                function () {
                    $('#hoverText').css('color', 'blue');
                },
                function () {
                    $('#hoverText').css('color', 'gray');
                }
            );

            // Effects
            $('#toggleBoxBtn').click(function () {
                $('#effectBox').fadeToggle();
            });

            $('#slideBoxBtn').click(function () {
                $('#slideBox').slideToggle();
            });
            // Html Manuipluation
            $('#addItemBtn').click(function () {
                var newItem = '<li class="list-group-item">New Item</li>';
                $('#itemList').append(newItem);

                // Show the toast
                var toastElement = new bootstrap.Toast($('#toast'));
                toastElement.show();
            });

            $('#clearItemsBtn').click(function () {
                $('#itemList').empty();
            });

        });
    </script>
}


<div class="container mt-5">
        <h1 class="text-center mb-4" id="p1">jQuery Demonstration</h1>
        <h6 class="text-center mb-4">Click the heading to see a jQuery effect.</h6>
        
        <!-- Selectors Example -->
        <div class="card mb-4">
            <div class="card-header">Selectors</div>
            <div class="card-body">
                <p class="text-primary">Click the button to highlight all paragraphs</p>
                <p class="text-secondary">This paragraph will not be highlighted.</p>
                <button id="highlightBtn" class="btn btn-primary">Highlight Text</button>
            </div>
        </div>

        <!-- Events Example -->
        <div class="card mb-4">
            <div class="card-header">Events</div>
            <div class="card-body">
                <input type="text" id="textInput" class="form-control mb-2" placeholder="Type something..." />
                <button id="showInputBtn" class="btn btn-secondary">Show Input</button>
                <p id="inputDisplay" class="mt-3 text-muted"></p>
                <div>
                    <button id="hoverBtn" class="btn btn-info mt-3">Hover Over Me</button>
                    <p id="hoverText" class="text-muted mt-2">Hover over the button to see a change.</p>
                </div>
            </div>
        </div>

        <!-- Effects Example -->
        <div class="card mb-4">
            <div class="card-header">Effects</div>
            <div class="card-body">
                <button id="toggleBoxBtn" class="btn btn-warning">Toggle Box</button>
                <div id="effectBox" class="mt-3" style="width: 100px; height: 100px; background-color: orange;"></div>
                <button id="slideBoxBtn" class="btn btn-danger mt-3">Slide Box</button>
                <div id="slideBox" class="mt-3" style="width: 100px; height: 100px; background-color: green;"></div>
            </div>
        </div>

        <!-- HTML Manipulation Example -->
    <div class="card mb-4">
        <div class="card-header">HTML Manipulation</div>
        <div class="card-body">
            <button id="addItemBtn" class="btn btn-success">Add Item</button>
            <button id="clearItemsBtn" class="btn btn-danger">Clear Items</button>
            <ul id="itemList" class="mt-3 list-group">
                @* <li class="list-group-item">Item 1</li>
                <li class="list-group-item">Item 2</li> *@
            </ul>
        </div>
    </div>

    <!-- Toast container -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                Item added successfully...!!!
            </div>
        </div>
    </div>
</div>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mouse and Keyboard Events</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Mouse and Keyboard Events in jQuery</h1>

        <!-- Mouse Events -->
        <div class="card mb-4">
            <div class="card-header">Mouse Events</div>
            <div class="card-body">
                <button id="mouseEventBtn" class="btn btn-primary">Hover, Click, or Double Click Me</button>
                <p id="mouseEventDisplay" class="mt-3">Interact with the button to see events.</p>

                <div id="mouseArea" class="border border-secondary mt-3 p-3" style="height: 200px;">
                    Move your mouse in this area to see position updates.
                    <p id="mousePosition" class="mt-2"></p>
                </div>

                <button id="rightClickBtn" class="btn btn-warning mt-3">Right-Click Me</button>
                <p id="rightClickMessage" class="mt-3 text-muted"></p>
            </div>
        </div>

        <!-- Keyboard Events -->
        <div class="card mb-4">
            <div class="card-header">Keyboard Events</div>
            <div class="card-body">
                <input type="text" id="keyInput" class="form-control mb-3" placeholder="Type something..." />
                <p id="keyEventDisplay" class="text-muted">Start typing to see events.</p>

                <textarea id="textareaInput" class="form-control mt-3" placeholder="Type here to track events in a text area..." rows="3"></textarea>
                <p id="textareaEventDisplay" class="text-muted mt-3">Interact with the text area to see events.</p>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Mouse Events
            $("#mouseEventBtn")
                .click(function () {
                    $("#mouseEventDisplay").text("Button clicked!");
                })
                .dblclick(function () {
                    $("#mouseEventDisplay").text("Button double-clicked!");
                })
                .hover(
                    function () {
                        $("#mouseEventDisplay").text("You hovered over the button!");
                    },
                    function () {
                        $("#mouseEventDisplay").text("You left the button!");
                    }
                );

            $("#mouseArea").mousemove(function (event) {
                var posX = event.pageX;
                var posY = event.pageY;
                $("#mousePosition").text("Mouse Position: X = " + posX + ", Y = " + posY);
            });

            $("#mouseArea").mousedown(function () {
                $("#mousePosition").text("Mouse button is pressed inside the area.");
            });

            $("#mouseArea").mouseup(function () {
                $("#mousePosition").text("Mouse button is released inside the area.");
            });

            $("#rightClickBtn").contextmenu(function (event) {
                event.preventDefault(); // Prevent default context menu
                $("#rightClickMessage").text("Right-click detected!");
            });

            // Keyboard Events
            $("#keyInput").keydown(function (event) {
                $("#keyEventDisplay").text("Key Down: " + event.key);
            });

            $("#keyInput").keyup(function (event) {
                $("#keyEventDisplay").text("Key Up: " + event.key);
            });

            $("#keyInput").keypress(function (event) {
                $("#keyEventDisplay").text("Key Pressed: " + event.key);
            });

            $("#textareaInput").on("input", function () {
                $("#textareaEventDisplay").text("Content changed: " + $(this).val());
            });

            $("#textareaInput").focus(function () {
                $("#textareaEventDisplay").text("Textarea focused.");
            });

            $("#textareaInput").blur(function () {
                $("#textareaEventDisplay").text("Textarea lost focus.");
            });
        });
    </script>
</body>
</html>